<script>
const tasks = [
 {type:"test", text:"print(2**3) –Ω”ô—Ç–∏–∂–µ—Å—ñ “õ–∞–Ω–¥–∞–π?", content:"A) 6<br>B) 8<br>C) 9"},
 {type:"code", text:"a=5, b=3. “Æ–ª–∫–µ–Ω—ñ–Ω —à—ã“ì–∞—Ä–∞—Ç—ã–Ω –∫–æ–¥ –∂–∞–∑."},
 {type:"emotion", text:"üòä –ú“±“ì–∞–ª—ñ–º –∫”©—Ä—Å–µ—Ç–∫–µ–Ω —ç–º–æ—Ü–∏—è–Ω—ã “õ–∞–π—Ç–∞–ª–∞!"},
 {type:"prize", text:"üç´ –ü–†–ò–ó! –ö—ñ—à–∫–µ–Ω—Ç–∞–π —à–æ–∫–æ–ª–∞–¥!"},
 {type:"question", text:"Python-–¥–∞ —Ü–∏–∫–ª –Ω–µ “Ø—à—ñ–Ω –∫–µ—Ä–µ–∫?"},
 {type:"test", text:"len([1,2,3,4]) ?", content:"A)3 B)4 C)5"},
 {type:"code", text:"for –∞—Ä“õ—ã–ª—ã 1-–¥–µ–Ω 5-–∫–µ –¥–µ–π—ñ–Ω —à—ã“ì–∞—Ä—É"},
 {type:"emotion", text:"üòÆ –¢–∞“£ “õ–∞–ª“ì–∞–Ω —ç–º–æ—Ü–∏—è–Ω—ã –∫”©—Ä—Å–µ—Ç!"},
 {type:"prize", text:"üéÅ BONUS PRIZE"},
 {type:"question", text:"break –ø–µ–Ω continue –∞–π—ã—Ä–º–∞—à—ã–ª—ã“ì—ã?"},
 {type:"test", text:"print('py'*2)", content:"A)py2 B)pypy C)py py"},
 {type:"code", text:"x=10. –ñ“±–ø –ø–∞ —Ç–µ–∫—Å–µ—Ä."},
 {type:"emotion", text:"üòé Cool —ç–º–æ—Ü–∏—è!"},
 {type:"question", text:"Python “õ–∞–Ω–¥–∞–π —Ç—ñ–ª?"},
 {type:"test", text:"bool(0) ?", content:"A)True B)False"},
 {type:"prize", text:"üç¨ –°–Æ–†–ü–†–ò–ó"}
];

const grid = document.getElementById("grid");
tasks.forEach((t,i)=>{
  const d=document.createElement("div");
  d.className="cell";
  d.innerText=i+1;

  const b=document.createElement("div");
  b.className="badge "+t.type;
  b.innerText=t.type.toUpperCase();
  d.appendChild(b);

  d.onclick=()=>openTask(d,t);
  grid.appendChild(d);
});

function openTask(cell,task){
  document.getElementById("title").innerText=task.text;
  document.getElementById("content").innerHTML=task.content?`<pre>${task.content}</pre>`:"";
  document.getElementById("modal").classList.add("active");
  cell.classList.add("done");
}

function closeModal(){
  document.getElementById("modal").classList.remove("active");
}
</script>

